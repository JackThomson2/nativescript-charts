<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" xmlns:LineChart="nativescript-charts/line-chart">
    <ScrollView>
      <StackLayout class="p-y-20">
        <StackLayout id="lay" class="graph">
        </StackLayout>
        <StackLayout class="graph two">
          <LineChart:LineChart class="graph" id="graph1" chartSettings="{{chartSettings}}" chartData="{{chartData}}"/> 
        </StackLayout>
        <StackLayout orientation="horizontal">
          <Button text="clearData" tap="clearData"></Button>
          <Button text="clearGraph" tap="clearGraph"></Button>
          <Button text="addLine" tap="addLine"></Button>
          <Button text="editSettings" tap="editSettings"></Button>
        </StackLayout>
      </StackLayout>
    </ScrollView>
</Page>
